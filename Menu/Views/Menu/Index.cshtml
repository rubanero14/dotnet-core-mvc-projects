@* Import model related to the View at the top of the page with right path as below *@
@model List<Menu.Models.Dish>;

@* ViewData is used to assign any metadata of the page, in this context we are setting title of the page below *@
@{
    ViewData["Title"] = "Menu";
}

@* Markup/Layout Section *@
<div class="container">
    <div class="row">
        @* Model here in this context refers to @model List<Menu.Models.Dish> as above *@
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
                <div class="row card border-radius-curved me-2">
                    <div class="col-12 p-0">
                        <img src="@item.ImageURL" alt="@item.Name" class="w-100" />
                    </div>
                    <div class="col-12 bg-secondary">
                        <h2 class="text-center text-light my-2">
                            @item.Name
                        </h2>
                        <h5 class="text-center text-light">$@item.Price</h5>
                    </div>
                    <div class="col-12 col-12 p-0">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light w-100">Check Ingredients</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>